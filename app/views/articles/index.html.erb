<div class="list-inline">
  <ul>
    <% @articles.each do |article| %>
      <li>
        <div id="title"><%= link_to article.title, article_path(article) %></div>
        <div id="content"><%= article.content %></div>

        <div class="buttons">
        <!-- Edit Button -->
          <%= link_to articles_edit_path(article) do %>
            <i class="fa fa-pencil" aria-hidden="true"></i>
          <% end %>

          <!-- Delete Button -->
          <%= link_to article_path(article), method: :delete,
            data: { confirm: "Are you sure you want to delete the article?" } do %>
            <i class="fa fa-trash-o" aria-hidden="true"></i>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
